@model IEnumerable<SkrzypekjanShop.Models.Product>

@{
    ViewData["Title"] = "Index";
    string basketPrice = ViewBag.basketPrice;
}

<div class="container div-buy">
    <br />
    <div class="my-shadow spacings">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Photo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <img src="@item.Photo" width="200" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)$
                        </td>
                        <td>
                            @Html.ActionLink("Delete", "Delete", new { id = item.ProductId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <h3>@Html.Raw(basketPrice)$</h3>

        <a class="btn btn-warning" asp-controller="Product" asp-action="Index">Back to List</a>
        <a class="btn btn-success" asp-controller="Basket" asp-action="Message">Confirm purchases</a>
    </div>
    <br />
</div>